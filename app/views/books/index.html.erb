<%= render "layouts/nav" %>

<div id="index_title">
	<h2>Books</h2>
</div>

	<ul id="index_ul">
		<% @books.each do |book| %>
			<li>
				<div class="index_book">
				<%= link_to book_path(book) do %>
					<%= image_tag("", :class => 'show_book') %>
					<div class="index_book_details">
						<div class="index_book_title"><%= book.title %></div>
							Author: <i><%= raw(book.composers.map{|c| link_to c.full_name, composer_path(c)}.join(', ')) %></i><br />
							Publishing Date: <%= book.pubdate.strftime("%b %d, %Y") %><br />
							ISBN: <%= book.isbn %><br />
							<%= link_to "Edit", edit_book_path(book) %><br />
							<%= link_to "Delete", book_path(book), method: :delete, data: {confirm: "Really delete this book? This action cannot be undone"} %>
						</div>
					</div>
				<% end %>
			</li>
		<% end %>
	</ul>